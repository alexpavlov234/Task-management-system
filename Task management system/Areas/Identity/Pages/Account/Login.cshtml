@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-12">
        <section>
            <form class="row" id="account" method="post">
                <div class="col-12 col-sm-6">
                    <h4>Използвайте локален акаунт, за да влезете в системата.</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Username" class="form-label"></label>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div class="d-flex">
                            <a id="forgot-password" asp-page="./ForgotPassword">Забравена парола?</a>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Вход</button>
                    </div>
                </div>
                <div class="col-12 col-sm-6 g-3 align-items-center justify-content-center d-flex flex-column">
                    
                    <div class="d-flex">
                        <a class="w-100 btn btn-lg btn-primary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрирайте се като нов потребител</a>
                    </div>
                    <div class="d-flex">
                        <a class="w-100 btn btn btn-outline-primary my-2" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Повторно изпращане на имейл за потвърждение</a>
                    </div>
                </div>
            </form>
        </section>
    </div>
